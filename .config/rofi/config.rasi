configuration {
    drun {
        parse-user:    true;
        parse-system:  true;
        scan-desktop:  true;
        fallback-icon: "applications-all";
    }

    window {
        prefer-icon-theme: true;
    }

    run, window {
        fallback-icon: "applications-all";
    }

    m:                          -5;
    eh:                         1;
    dpi:                        95;
    modi:                       "drun,window";
    font:                       "Cascadia Code Regular 12";
    sort:                       true;
    cycle:                      false;
    modes:                      "drun,window";
    markup:                     true;
    filter:                     "";
    xoffset:                    0;
    yoffset:                    0;
    threads:                    0;
    location:                   2;
    terminal:                   "~/.local/bin/term";
    tokenize:                   true;
    matching:                   "glob";
    cache-dir:                  "~/.cache";
    icon-theme:                 "";
    show-icons:                 true;
    auto-select:                false;
    steal-focus:                true;
    parse-hosts:                false;
    sidebar-mode:               false;
    hover-select:               false;
    scroll-method:              0;
    click-to-exit:              true;
    case-sensitive:             false;
    fixed-num-lines:            false;
    normalize-match:            false;
    disable-history:            true;
    ignored-prefixes:           "";
    max-history-size:           0;
    parse-known-hosts:          false;
    refilter-timeout-limit:     300;
    application-fallback-icon:  "applications-all.svg";

    window-format:              "{t}";
    window-thumbnail:           true;
    window-match-fields:        "all";

    combi-modes:                "drun,window";
    combi-display-format:       "{mode} {text}";
    combi-hide-mode-prefix:     true;

    drun-categories:            "";
    drun-url-launcher:          "~/.local/bin/browser";
    drun-match-fields:          "name,exec,keywords";
    drun-show-actions:          false;
    drun-display-format:        "{icon} {name}";
    drun-use-desktop-cache:     false;
    drun-reload-desktop-cache:  false;

    ssh-client:                 "/usr/bin/false";
    ssh-command:                "/usr/bin/false";
    run-command:                "{cmd}";
    window-command:             "";
    run-list-command:           "";
    run-shell-command:          "/usr/bin/dash -c {cmd}";

    display-run:                "";
    display-ssh:                "";
    display-drun:               "";
    display-keys:               "";
    display-combi:              "";
    display-window:             "";
    display-filebrowser:        "";
    display-recursivebrowser:   "";

    ml-row-up:                  "ScrollUp";
    ml-row-left:                "ScrollLeft";
    ml-row-down:                "ScrollDown";
    ml-row-right:               "ScrollRight";

    me-select-entry:            "MousePrimary";
    me-accept-entry:            "MouseDPrimary";
    me-accept-custom:           "";

    kb-cancel:                  "Escape";
    kb-row-up:                  "";
    kb-row-tab:                 "";
    kb-row-last:                "End";
    kb-row-down:                "";
    kb-move-end:                "Control+E";
    kb-row-left:                "";
    kb-select-1:                "";
    kb-select-2:                "";
    kb-select-3:                "";
    kb-select-4:                "";
    kb-select-5:                "";
    kb-select-6:                "";
    kb-select-7:                "";
    kb-select-8:                "";
    kb-select-9:                "";
    kb-custom-1:                "";
    kb-custom-2:                "";
    kb-custom-3:                "";
    kb-custom-4:                "";
    kb-custom-5:                "";
    kb-custom-6:                "";
    kb-custom-7:                "";
    kb-custom-8:                "";
    kb-custom-9:                "";
    kb-select-10:               "";
    kb-custom-10:               "";
    kb-custom-11:               "";
    kb-custom-12:               "";
    kb-custom-13:               "";
    kb-custom-14:               "";
    kb-custom-15:               "";
    kb-custom-16:               "";
    kb-custom-17:               "";
    kb-custom-18:               "";
    kb-custom-19:               "";
    kb-ellipsize:               "";
    kb-page-prev:               "Page_Up";
    kb-page-next:               "Page_Down";
    kb-row-first:               "Home";
    kb-row-right:               "";
    kb-mode-next:               "Tab";
    kb-screenshot:              "";
    kb-row-select:              "";
    kb-accept-alt:              "";
    kb-move-front:              "Control+A";
    kb-clear-line:              "Control+W";
    sorting-method:             "fzf";
    kb-toggle-sort:             "";
    kb-element-next:            "Down";
    kb-element-prev:            "Up";
    kb-accept-entry:            "Return,KP_Enter";
    kb-delete-entry:            "";
    kb-primary-copy:            "";
    kb-mode-complete:           "";
    kb-accept-custom:           "";
    kb-mode-previous:           "";
    kb-primary-paste:           "";
    kb-remove-to-eol:           "Control+k";
    kb-remove-to-sol:           "Control+u";
    kb-move-char-back:          "Left";
    kb-move-word-back:          "Control+Left";
    kb-secondary-copy:          "Control+c";
    kb-secondary-paste:         "Control+v";
    kb-remove-word-back:        "Control+BackSpace";
    kb-remove-char-back:        "BackSpace,Shift+BackSpace";
    kb-entry-history-up:        "";
    kb-move-word-forward:       "Control+Right";
    kb-move-char-forward:       "Right";
    kb-accept-custom-alt:       "";
    kb-entry-history-down:      "";
    kb-remove-word-forward:     "Control+Delete";
    kb-remove-char-forward:     "Delete";
    kb-toggle-case-sensitivity: "";
}
