configuration {
    m:                          "-5";
    bw:                         0;
    modi:                       "drun,window";
    font:                       "SauceCodePro Nerd Font Mono 12";
    sort:                       true;
    cycle:                      true;
    lines:                      15;
    width:                      1;
    padding:                    0;
    xoffset:                    0;
    yoffset:                    0;
    columns:                    1;
    threads:                    0;
    location:                   1;
    terminal:                   "/usr/bin/xfce4-terminal";
    tokenize:                   true;
    matching:                   "glob";
    kb-cancel:                  "Escape";
    kb-row-up:                  "Up";
    kb-row-tab:                 "";
    fullscreen:                 false;
    ssh-client:                 "/usr/bin/false";
    combi-modi:                 "drun,window";
    show-match:                 true;
    show-icons:                 true;
    parse-hosts:                false;
    kb-row-last:                "End";
    kb-row-down:                "Down";
    kb-move-end:                "Control+E";
    kb-select-1:                "";
    kb-select-2:                "";
    kb-select-3:                "";
    kb-select-4:                "";
    kb-select-5:                "";
    kb-select-6:                "";
    kb-select-7:                "";
    kb-select-8:                "";
    kb-select-9:                "";
    kb-custom-1:                "";
    kb-custom-2:                "";
    kb-custom-3:                "";
    kb-custom-4:                "";
    kb-custom-5:                "";
    kb-custom-6:                "";
    kb-custom-7:                "";
    kb-custom-8:                "";
    kb-custom-9:                "";
    ssh-command:                "/usr/bin/false";
    run-command:                "{cmd}";
    line-margin:                1;
    display-run:                "";
    display-ssh:                "";
    kb-select-10:               "";
    kb-custom-10:               "";
    kb-page-prev:               "Page_Up";
    kb-page-next:               "Page_Down";
    kb-row-first:               "Home";
    kb-mode-next:               "Tab";
    display-drun:               "";
    sidebar-mode:               false;
    line-padding:               2;
    kb-accept-alt:              "";
    kb-move-front:              "Control+A";
    window-format:              "[{w}] {t}";
    scroll-method:              0;
    click-to-exit:              true;
    kb-clear-line:              "Control+W";
    display-combi:              "";
    display-window:             "";
    hide-scrollbar:             false;
    kb-toggle-sort:             "";
    case-sensitive:             false;
    scrollbar-width:            5;
    disable-history:            false;
    kb-accept-entry:            "Return,KP_Enter";
    kb-accept-custom:           "";
    kb-mode-previous:           "";
    kb-primary-paste:           "Control+V";
    fake-transparency:          false;
    parse-known-hosts:          false;
    run-shell-command:          "{terminal}";
    kb-secondary-paste:         "Control+v";
    kb-toggle-case-sensitivity: "";
}

* {
    font:                       "SauceCodePro Nerd Font Mono 12";
    text-color:                 #FFFFFFFF;
    background-color:           #00000000;
}

entry {
    padding:                    8 12 8 12;
    text-color:                 #FFFFFFFF;
}

prompt {
    enabled:                    false;
}

window {
    width:                      18%;
    height:                     100%;
    transparency:               "real";
}

mainbox {
    border:                     0;
    padding:                    0;
    children:                   [inputbar, listview];
    border-radius:              0;
    background-color:           #191919AF;
}

listview {
    columns:                    1;
    padding:                    0;
    spacing:                    1;
    children:                   [scrollbar, element];
    scrollbar:                  false;
}

scrollbar{
    enabled:                    true;
    handle-width:               10px;
    border-color:               #FFFFFFFF;
    handle-color:               #FFFFFF5F;
}

inputbar {
    border:                     0 0 2px 0;
    padding:                    3 3 3 3;
    children:                   [entry];
    text-color:                 #FFFFFFFF;
    border-color:               #FFFFFFFF;
    background-color:           #0027C1FF;
}

element {
    border:                     0;
    padding:                    12 12 12 12;
    children:                   [element-icon, element-text];
    text-color:                 #FFFFFFFF;
    border-radius:              0;
}
element-icon {
    size:                       20;
}
element selected {
    text-color:                 #000000FF;
    border-color:               #00000000;
    background-color:           #FFFFFFFF;
}
