## Polybar Configuration
# iDigitalFlame

[global/wm]
margin-top                      = 0
margin-bottom                   = 0

[settings]
throttle-output                 = 5
throttle-output-for             = 10
screenchange-reload             = true

[theme]
include-file                    = $HOME/.config/theme/current/polybar.conf

[module/xwindow]
type                            = internal/xwindow
label                           = %title%
label-maxlen                    = 60
label-padding                   = 2
label-overline                  = ${theme.clear}
label-underline                 = ${theme.clear}

[module/filesystem]
type                            = internal/fs
mount-0                         = /home
interval                        = 120
fixed-values                    = true
label-mounted                   = "%used% (%percentage_used%%) "
format-mounted                  = <label-mounted>
format-mounted-padding          = 2
format-mounted-overline         = ${theme.clear}
format-mounted-underline        = ${theme.clear}
format-mounted-background       = #FF0000AA

[module/i3]
type                            = internal/i3
format                          = <label-state> <label-mode>
index-sort                      = true
enable-click                    = true
label-urgent                    = " %index%"
label-visible                   = " %index%"
enable-scroll                   = true
label-focused                   = " %index%"
pin-workspaces                  = false
wrapping-scroll                 = true
label-unfocused                 = " %index%"
strip-wsnumbers                 = true
label-urgent-padding            = 1
label-focused-padding           = 1
label-visible-padding           = 1
label-urgent-overline           = ${theme.clear}
label-visible-overline          = ${theme.clear}
label-urgent-underline          = ${theme.clear}
label-focused-overline          = ${theme.clear}
label-focused-underline         = ${theme.clear}
label-urgent-foreground         = #FFEE8005
label-urgent-background         = 1
label-unfocused-padding         = 1
label-visible-underline         = ${theme.clear}
label-unfocused-overline        = ${theme.clear}
label-focused-foreground        = ${theme.light}
label-focused-background        = ${root.background}
label-visible-foreground        = ${theme.light}
label-visible-background        = ${root.background}
label-unfocused-underline       = ${theme.clear}
label-unfocused-background      = ${root.background}

[module/cpu]
type                            = internal/cpu
label                           = "%percentage%% "
interval                        = 1
format-padding                  = 2
format-overline                 = ${theme.clear}
format-underline                = ${theme.clear}
format-background               = #FFAA0000
format-foreground               = ${theme.light}

[module/memory]
type                            = internal/memory
label                           = "%gb_used% "
interval                        = 15
format-padding                  = 2
format-overline                 = ${theme.clear}
format-underline                = ${theme.clear}
format-background               = #FFAA5500

[module/date]
date                            = %a
type                            = internal/date
time                            = %H:%M
label                           = "%date% %time%"
interval                        = 10
date-alt                        = %A %D
time-alt                        = %I:%M %p
format-padding                  = 2
format-overline                 = ${theme.clear}
format-underline                = ${theme.clear}
format-background               = #FF555555
format-foreground               = ${theme.light}

[module/volume]
type                            = internal/volume
label-muted                     = "Mute "
label-volume                    = "%percentage%%"
master-mixer                    = Master
ramp-volume-0                   = ""
ramp-volume-1                   = ""
ramp-volume-2                   = ""
format-volume                   = <label-volume> <ramp-volume>
master-soundcard                = default
format-muted-padding            = 2
format-volume-padding           = 2
format-muted-foreground         = ${theme.light}
format-muted-background         = #FFFF55FF
format-volume-background        = #FFFF55FF
format-volume-foreground        = ${theme.light}

[module/battery]
type                            = internal/battery
adapter                         = AC
full-at                         = 100
battery                         = BAT0
label-full                      = "%percentage%% "
time-format                     = "%H:%M"
format-charging                 = "<label-charging> <animation-charging>"
ramp-capacity-0                 = ""
ramp-capacity-1                 = ""
ramp-capacity-2                 = ""
ramp-capacity-3                 = ""
ramp-capacity-4                 = ""
label-discharging               = "%time% %percentage%%"
format-discharging              = "<label-discharging> <ramp-capacity>"
format-full-padding             = 2
animation-charging-0            = ""
animation-charging-1            = ""
animation-charging-2            = ""
format-charging-prefix          = " "
format-full-background          = #FF00AA00
format-full-foreground          = ${theme.light}
format-charging-padding         = 2
format-discharging-padding      = 2
format-charging-background      = #FF137510
format-charging-foreground      = ${theme.light}
animation-charging-framerate    = 750
format-discharging-background   = #FFAA00AA
format-discharging-foreground   = ${theme.light}

[module/lockerctl]
type                            = custom/script
exec                            = "$HOME/.local/bin/lslockers"
format                          = <label>
interval                        = 10
click-left                      = "$HOME/.local/bin/i3/locker"
click-right                     = "$HOME/.local/bin/i3/locker"
click-middle                    = "$HOME/.local/bin/i3/locker"
label-padding                   = 2
label-background                = #FFDF3D69

[module/weather]
type                            = custom/script
exec                            = "$HOME/.local/bin/i3/weather"
format                          = <label>
interval                        = 600
label-font                      = 3
click-left                      = "$HOME/.local/bin/i3/weather go"
click-right                     = "$HOME/.local/bin/i3/weather go"
click-middle                    = "$HOME/.local/bin/i3/weather go"
label-padding                   = 2
label-background                = #FF008989
label-foreground                = ${theme.light}

[module/search]
type                            = custom/script
exec                            = echo 1
format                          = <label>
label                           = ""
interval                        = 0
click-left                      = "$HOME/.local/bin/i3/search"
click-right                     = "$HOME/.local/bin/i3/search"
click-middle                    = "$HOME/.local/bin/i3/search"

[bar/standard]
width                           = 100%
radius                          = 0
height                          = 35
bottom                          = false
font-1                          = FontAwesome:size=14;0
font-0                          = xos4terminus:size=16;0
font-2                          = Weather Icons:size=14;1
monitor                         = eDP1
scroll-up                       = i3wm-wsnext
line-size                       = 0
line-color                      = ${theme.seperator}
foreground                      = ${theme.foreground}
background                      = ${theme.background}
scroll-down                     = i3wm-wsprev
border-size                     = 0
border-color                    = ${theme.background}
tray-padding                    = 1
fixed-center                    = true
padding-left                    = 1
modules-left                    = i3 xwindow
padding-right                   = 1
modules-right                   = weather volume lockerctl filesystem memory cpu battery date
tray-position                   = right
tray-detached                   = false
modules-center                  =
tray-background                 = ${root.background}
tray-transparent                = false
monitor-fallback                = eDP1
module-margin-left              = 0
module-margin-right             = 0
