[general]
mode             = viewer
size             = image
app_id           = swayimg
overlay          = yes
sigusr1          = none
sigusr2          = none
position         = auto
decoration       = no

[viewer]
loop             = yes
scale            = optimal
window           = #00000000
history          = 0
preload          = 1
position         = center
antialiasing     = mks13
transparency     = grid

[gallery]
size             = 250
cache            = 25
aspect           = fit
pstore           = no
window           = #00000000
background       = #7D0BABFF
border_color     = #000000FF
border_width     = 0
antialiasing     = mks13

[slideshow]
time             = 3
scale            = optimal
window           = #00000000
position         = center
antialiasing     = mks13
transparency     = grid

[list]
all              = yes
fsmon            = yes
order            = numeric
reverse          = no
recursive        = no

[font]
name             = SourceCodePro
size             = 12
color            = #FFFFFFFF
shadow           = #000000FF
background       = #0A000AAF

[info]
show             = yes
info_timeout     = 15
status_timeout   = 5

[info.viewer]
top_left         = +name,+format,+filesize,+imagesize,+exif,+frame
top_right        = index,scale
bottom_left      = status
bottom_right     = none

[info.gallery]
top_left         = +name,+format,+filesize,+imagesize,+exif,+frame
top_right        = index,scale
bottom_left      = status
bottom_right     = none

