[general]
mode             = viewer
size             = parent
app_id           = swayimg
sigusr1          = none
sigusr2          = none
position         = parent
decoration       = no

[viewer]
scale            = optimal
window           = #00000000
history          = 0
preload          = 1
position         = center
slideshow        = no
transparency     = grid
antialiasing     = mks13

[gallery]
fill             = yes
size             = 250
cache            = 25
border           = #000000FF
pstore           = no
shadow           = #000000FF
window           = #00000000
background       = #7D0BABFF
