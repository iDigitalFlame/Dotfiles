#!/usr/bin/sh
################################
###### iDigitalFlame 2018 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Power Menu
# iDigitalFlame 2018

case $(printf " Lock\n Logoff\n Hibernate\n Reboot\n Poweroff\n Restart i3" | rofi -dmenu -p 'Power' -lines 5 -columns 1) in
    " Lock")
    /opt/spaceport/bin/powerctl lock -f
    ;;
    " Hibernate")
    /usr/bin/sudo /usr/bin/systemctl hibernate
    ;;
    " Logoff")
    /usr/bin/i3-msg exit
    ;;
    " Reboot")
    /usr/bin/sudo /usr/bin/reboot
    ;;
    " Poweroff")
    /usr/bin/sudo /usr/bin/poweroff
    ;;
    " Restart i3")
    /usr/bin/i3-msg restart
    /usr/bin/killall polybar
    ;;
esac
exit 0
