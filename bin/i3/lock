## Locker
# iDigitalFlame 2018

KEYCOLOR="#7D0DABFF" # "#$(openssl rand -hex 3)FF"

/usr/bin/i3lock \
-n \
--clock \
--tiling \
--radius=20 \
--indicator \
--composite \
--force-clock \
--time-align=1 \
--date-align=1 \
--ring-width=4 \
--veriftext="" \
--wrongtext="" \
--noinputtext="" \
--timestr="%H:%M" \
--pointer=default \
--line-uses-inside \
--timepos="x+45:h-70" \
--datepos="x+45:h-45" \
--indpos="x+280:h-70" \
--ringcolor="#FFFFFFFF" \
--ignore-empty-password \
--bshlcolor="#D23D3DFF" \
--timecolor="#FFFFFFFF" \
--datecolor="#FFFFFFFF" \
--verifcolor="#FFFFFFFF" \
--keyhlcolor="$KEYCOLOR" \
--insidecolor="#00000000" \
--ringvercolor="#E6DB74FF" \
--ringwrongcolor="#D23D3DFF" \
--separatorcolor="#00000000" \
--insidevercolor="#00000000" \
--insidewrongcolor="#00000000" \
--datestr "Type password to unlock..." \
--image "/home/iDigitalFlame/.config/smd-lockscreen.png" \

# EOF