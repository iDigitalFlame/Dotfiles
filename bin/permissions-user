#!/usr/bin/sh
################################
###### iDigitalFlame 2018 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Permissions and Links Reset
# iDigitalFlame 2018

DOTS="$HOME/.dotfiles"

# Ownership
chmod -R 770 "$DOTS"
chown -R iDigitalFlame:iDigitalFlame "$DOTS"

# Problem Configs
rm -f "$HOME/.config/xfce4/terminal/terminalrc"

# General Links
ln -s "$DOTS/.dmrc" "$HOME" 2> /dev/null
ln -s "$DOTS/bin" "$HOME/.local/" 2> /dev/null
ln -s "$DOTS/.zshrc" "$HOME/.zshrc" 2> /dev/null
ln -s "$DOTS/.nanorc" "$HOME/.nanorc" 2> /dev/null
ln -s "$DOTS/config/i3" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/pacaur" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/polybar" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/leafpad" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/gtk-2.0" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/pcmanfm" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/applications" "$HOME/.local/share/" 2> /dev/null
ln -s "$DOTS/bin/browser" "$DOTS/bin/x-www-browser" 2> /dev/null
ln -s "$DOTS/bin/goreturns" "$HOME/.local/lib/go/bin/goreturns" 2> /dev/null
ln -s "$DOTS/config/smd-config.json" "$HOME/.config/smd-config.json" 2> /dev/null
ln -s "$DOTS/config/chromium-flags.conf" "$HOME/.config/chromium-flags.conf" 2> /dev/null
ln -s "$DOTS/config/libinput-gestures.conf" "$HOME/.config/libinput-gestures.conf" 2> /dev/null
ln -s "$DOTS/config/Code/User/settings.json" "$HOME/.config/Code/User/settings.json" 2> /dev/null
ln -s "$DOTS/config/Code/User/keybindings.json" "$HOME/.config/Code/User/keybindings.json" 2> /dev/null

# Theme Symlinks
ln -s "$DOTS/config/theme" "$HOME/.config/" 2> /dev/null
ln -s "$DOTS/config/theme/current/gtk-2.conf" "$HOME/.gtkrc-2.0" 2> /dev/null
ln -s "$DOTS/config/theme/current/gtk-2.conf" "$HOME/.gtkrc-2.0.mine" 2> /dev/null
ln -s "$DOTS/config/theme/current/rofi.conf" "$HOME/.config/rofi/config" 2> /dev/null
ln -s "$DOTS/config/theme/current/dunst.conf" "$HOME/.config/dunst/dunstrc" 2> /dev/null
ln -s "$DOTS/config/theme/current/gtk-3.conf" "$HOME/.config/gtk-3.0/settings.ini" 2> /dev/null
ln -s "$DOTS/config/theme/current/terminal.conf" "$HOME/.config/xfce4/terminal/terminalrc" 2> /dev/null

# Final Permissions Fix
chmod -R 550 "$DOTS"
find "$DOTS" -type f -exec chmod 440 {} \;
chmod 550 "$DOTS/.zshrc"
chmod -R 770 "$DOTS/.git"
chmod -R 550 "$DOTS/bin"
chmod 660 "$DOTS/config/smd-config.json"
chmod 660 "$DOTS/dotfiles.code-workspace"

# EOF