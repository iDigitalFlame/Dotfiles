#!/usr/bin/bash
################################
###### iDigitalFlame 2019 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## PFX2PEM
# iDigitalFlame

if [ $# -ne 1 ]; then
    printf "Usage\npfx2pem <pfx>\n"
    exit 1
fi

c="$1"
printf "Password for PFX: "
read -s cpa
printf "\n"
openssl pkcs12 -in "$c" -nocerts -out "/tmp/$c.pem" -nodes -password file:<(printf "$cpa")
openssl pkcs12 -in "$c" -nokeys -out "$c.pem" -password file:<(printf "$cpa")
openssl rsa -in "/tmp/$c.pem" -out "$c.key"
rm "/tmp/$c.pem" 2> /dev/null
exit 0
