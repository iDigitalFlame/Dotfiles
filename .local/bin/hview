vm="$(hydra -l --dmenu | awk -F'|' '{print $1": "$3}' | rofi -dmenu -no-lazy-grab -i -theme "${HOME}/.config/rofi/apps.rasi" 2> /dev/null)"
if [ -z "$vm" ]; then
    exit 0
fi

exec hydra -c --no-fork -i "$(echo $vm | cut --delimiter=':' -f1)" 2> /dev/null
