args=$*

if [ -z "$args" ]; then
    /usr/bin/gh web dash -c "export TZ=UTC; /usr/bin/chromium"
    exit 0
fi

if [ "$args" = "--all" ]; then
    /usr/bin/gh all dash -c "export TZ=UTC; /usr/bin/chromium --new-window"
    exit 0
fi

/usr/bin/gh web dash -c "export TZ=UTC; /usr/bin/chromium \"$args\""
