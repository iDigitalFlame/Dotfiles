#!/usr/bin/bash
################################
###### iDigitalFlame 2019 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Browser Wrapper
# iDigitalFlame

params="$@"
usefirefox=1

if [ -n "$FIREFOX" ]; then
    if [ "$FIREFOX" == "0" ]; then
        usefirefox=0
    fi
fi
if [ -n "$(basename $0 | grep -i chrome)" ]; then
    usefirefox=0
fi

if [ $usefirefox -eq 1 ]; then
    if [ -z "$params" ]; then
        sg firewall-web -c "export TZ=UTC; export MOZ_GTK_TITLEBAR_DECORATION=client; /usr/bin/firefox -P iDigitalFlame"
    else
        sg firewall-web -c "export TZ=UTC; export MOZ_GTK_TITLEBAR_DECORATION=client; /usr/bin/firefox -P iDigitalFlame \"$params\""
    fi
else
    if [ -z "$params" ]; then
        sg firewall-web -c "export TZ=UTC; /usr/bin/chromium --incognito --disk-cache-dir=/tmp/.usercache/iDigitalFlame/chromium --password-store=gnome"
    else
        sg firewall-web -c "export TZ=UTC; /usr/bin/chromium --incognito --disk-cache-dir=/tmp/.usercache/iDigitalFlame/chromium --password-store=gnome \"$params\""
    fi
fi
