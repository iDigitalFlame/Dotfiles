for i in $(pactl list cards | grep -E '[^\.]object.id =' | awk -F'"' '{print $2}'); do
    # Set all HDMI outputs to the "HDMI" profile in order for them to work.
    if wpctl inspect $i | grep -q 'device\.enum\.api'; then
        wpctl set-profile $i 3
    fi
done

if [ $# -ge 1 ]; then
    for i in $(pactl list sources | grep -E '[^\.]object.id =' | awk -F'"' '{print $2}'); do
        wpctl set-volume $i 0
        wpctl set-mute $i 1
    done
fi

for i in $(pactl list sinks | grep -E '[^\.]object.id =' | awk -F'"' '{print $2}'); do
    wpctl set-volume $i 0
    wpctl set-mute $i 1
done
