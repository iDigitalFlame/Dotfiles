#!/usr/bin/bash
################################
###### iDigitalFlame 2019 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Locker List Command
# iDigitalFlame

if ! [ -f "/var/run/smd/lockers" ]; then
    printf "0 \n"
    exit 0
fi

LOCKERS=$(cat /var/run/smd/lockers | wc -w)

if [ -z "$LOCKERS" ] || [ "$LOCKERS" -eq "0" ]; then
    printf "0 \n"
    exit 0
fi

printf "$LOCKERS \n"
exit 0
