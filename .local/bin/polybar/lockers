if ! [ -f "/var/run/smd/lockers" ]; then
    echo "0 "
    exit 0
fi

lockers=$(cat "/var/run/smd/lockers" | wc -w)
if [ -z "$lockers" ] || [ "$lockers" -eq "0" ]; then
    echo "0 "
    exit 0
fi

echo "$lockers "
