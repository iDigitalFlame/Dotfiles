get_icon() {
    case $1 in
        01d) result="";;
        01n) result="";;
        02d) result="";;
        02n) result="";;
        03*) result="";;
        04*) result="";;
        09d) result="";;
        09n) result="";;
        10d) result="";;
        10n) result="";;
        11d) result="";;
        11n) result="";;
        13d) result="";;
        13n) result="";;
        50d) result="";;
        50n) result="";;
        *) result="";
    esac
    printf $result
}

if [ -e "$HOME/.cache/offline" ]; then
    printf ""
    exit 0
fi

if [ ! -e "$HOME/.config/weather.conf" ]; then
    printf ""
    exit 0
fi

source "$HOME/.config/weather.conf"
if [ $? -ne 0 ]; then
    printf ""
    exit 0
fi

if [ $# -eq 1 ] && [ "$1" == "go" ]; then
    screen -dmS weather gh web sh -c "/usr/bin/surf -BDfgIKmnSTxc /dev/null https://openweathermap.org/city/${CITY}"
    exit 0
fi

weather=$(sg firewall-web -c "curl -sf 'http://api.openweathermap.org/data/2.5/weather?APPID=${KEY}&zip=${ZIP},us&units=imperial'")
if [ ! -z "$weather" ]; then
    icon=$(echo "$weather" | jq -r ".weather[].icon")
    temp=$(echo "$weather" | jq ".main.temp" | cut -d "." -f 1)
    description=$(echo "$weather" | jq -r ".weather[].description")
    if [ $# -eq 1 ]; then
        echo "$description", "${temp}°" "$(get_icon "$icon")"
    else
        echo "${temp}°" "$(get_icon "$icon")"
    fi
fi
