## Screenshot Clip
# iDigitalFlame

DELAY=1

if [ $# -ge 1 ]; then
  DELAY=0
fi
maim -d $DELAY -c 0,0,0,0 -u -o | xclip -selection clipboard -t image/png

exit 0
