delay=0.3
if [ $# -ge 1 ]; then
    delay=1
fi

maim -d $delay -uoqc 0,0,0,0 -t 0 -b 0 -f png -m 1 -n 0 | xclip -selection clipboard -t image/png
if [ $? -eq 0 ]; then
    notify-send -u low -a "Clippy" -c screenshot "Screenshot Taken" "Screenshot saved to clipboard."
fi
