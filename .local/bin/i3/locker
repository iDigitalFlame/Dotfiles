case $(printf " Chill (No Lockers)\n Coffee (5m)\n Caffeine (10m)\n Cocaine (15m)\n Insomnia (Unlimited)" | rofi --no-lazy-grab -dmenu -p 'Locker Preset' -lines 5 -columns 1) in
    " Chill (No Lockers)")
    lockerctl -kz false -kb false -kl false -ks false
    ;;
    " Coffee (5m)")
    lockerctl -z 300 -kb 300 -kl 300 -s 300
    ;;
    " Caffeine (10m)")
    lockerctl -z 600 -kb 600 -kl 600 -s 600
    ;;
    " Cocaine (15m)")
    lockerctl -z 900 -kb 900 -kl 900 -s 900
    ;;
    " Insomnia (Unlimited)")
    lockerctl -kz true -kb true -kl true -ks true
    ;;
esac
exit 0
