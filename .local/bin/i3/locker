menu_items=""" Clear All Lockers
 Clear All Lockers (Include System)
 Coffee (All 5m)
 Caffeine (All 10m)
 Cocaine (All 15m)
 Insomnia (All Unlimited)
 Disable Screen Blank
 Disable Screen Lock
 Disable Sleep
 Disable Hibernation
 Disable Lid Switch
"""
menu_selected=$(printf "$menu_items" | rofi -theme "$HOME/.config/rofi/menu.rasi" -theme-str "window{border-color:#000096;}element selected{background-color:#000096;}" -no-lazy-grab -dmenu -i -p "" -l 11 -columns 1)

case $menu_selected in
    " Clear All Lockers")
    lockerctl -kz false -kb false -kl false -ks false
    ;;
    " Clear All Lockers (Include System)")
    lockerctl -kz false -kb false -kl false -ks false -kl false -kd false
    ;;
    " Coffee (All 5m)")
    lockerctl -z 300 -kb 300 -kl 300 -s 300
    ;;
    " Caffeine (All 10m)")
    lockerctl -z 600 -kb 600 -kl 600 -s 600
    ;;
    " Cocaine (All 15m)")
    lockerctl -z 900 -kb 900 -kl 900 -s 900
    ;;
    " Insomnia (All Unlimited)")
    lockerctl -kz true -kb true -kl true -ks true
    ;;
    " Disable Screen Blank")
    lockerctl -kb true
    ;;
    " Disable Screen Lock")
    lockerctl -kl true
    ;;
    " Disable Sleep")
    lockerctl -ks true
    ;;
    " Disable Hibernation")
    lockerctl -kz true
    ;;
    " Disable Lid Switch")
    lockerctl -kd true
    ;;
esac
