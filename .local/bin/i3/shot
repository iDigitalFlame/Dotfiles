#!/usr/bin/bash
################################
###### iDigitalFlame 2018 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Screenshot
# iDigitalFlame

DELAY=1

if [ $# -ge 1 ]; then
  DELAY=0
fi
PICTURE_PATH="$HOME/Pictures/Screenshots/$(date +%m-%d-%Y-%H-%m-%S)-capture.jpg"
maim -d $DELAY -u -c 0,0,0,0 -o "$PICTURE_PATH"
sleep $DELAY
notify-send -u low -a "Clippy" -c screenshot "Screenshot Taken" "Screenshot saved to \"$PICTURE_PATH\"."

exit 0
