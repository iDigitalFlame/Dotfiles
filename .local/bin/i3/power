menu_items=""" Lock
 Logoff
 Suspend
 Hibernate
 Reboot
 Poweroff
 Restart i3
"""
menu_selected=$(printf "%s" "$menu_items" | rofi -theme "${HOME}/.config/rofi/menu.rasi" -theme-str "window{border-color:#AF0000;}element selected{background-color:#AF0000;}" -no-lazy-grab -dmenu -i -p "" -l 7 -columns 1)

case $menu_selected in
    " Lock")
    powerctl lock -f
    ;;
    " Suspend")
    sudo systemctl suspend
    ;;
    " Hibernate")
    sudo systemctl hibernate
    ;;
    " Logoff")
    i3-msg exit
    ;;
    " Reboot")
    sudo reboot
    ;;
    " Poweroff")
    sudo poweroff
    ;;
    " Restart i3")
    i3-msg restart
    killall polybar
    ;;
esac
