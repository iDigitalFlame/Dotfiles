## Power Menu

case $(printf " Lock\n Logoff\n Suspend\n Hibernate\n Reboot\n Poweroff\n Restart i3" | rofi -dmenu -p 'Power' -lines 7 -columns 1) in
    " Lock")
    powerctl lock -f
    ;;
    " Suspend")
    /usr/bin/systemctl suspend
    ;;
    " Hibernate")
    sudo /usr/bin/systemctl hibernate
    ;;
    " Logoff")
    i3-msg exit
    ;;
    " Reboot")
    sudo /usr/bin/reboot
    ;;
    " Poweroff")
    sudo /usr/bin/poweroff
    ;;
    " Restart i3")
    i3-msg restart
    killall polybar
    ;;
esac
exit 0
