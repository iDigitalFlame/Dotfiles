#!/usr/bin/bash
################################
###### iDigitalFlame 2019 ######
#                              #
#            -/`               #
#            -yy-   :/`        #
#         ./-shho`:so`         #
#    .:- /syhhhh//hhs` `-`     #
#   :ys-:shhhhhhshhhh.:o- `    #
#   /yhsoshhhhhhhhhhhyho`:/.   #
#   `:yhyshhhhhhhhhhhhhh+hd:   #
#     :yssyhhhhhyhhhhhhhhdd:   #
#    .:.oyshhhyyyhhhhhhddd:    #
#    :o+hhhhhyssyhhdddmmd-     #
#     .+yhhhhyssshdmmddo.      #
#       `///yyysshd++`         #
#                              #
########## SPACEPORT ###########
################################
## Power Menu
# iDigitalFlame

case $(printf " Lock\n Logoff\n Hibernate\n Reboot\n Poweroff\n Restart i3" | rofi -dmenu -p 'Power' -lines 6 -columns 1) in
    " Lock")
    powerctl lock -f
    ;;
    " Hibernate")
    sudo /usr/bin/systemctl hibernate
    ;;
    " Logoff")
    i3-msg exit
    ;;
    " Reboot")
    sudo /usr/bin/reboot
    ;;
    " Poweroff")
    sudo /usr/bin/poweroff
    ;;
    " Restart i3")
    i3-msg restart
    killall polybar
    ;;
esac
exit 0
