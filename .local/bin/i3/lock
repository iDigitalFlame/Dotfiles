# Disable all fullscreen windows (messes with i3-lock).
/usr/bin/i3-msg "[workspace=__focused__] fullscreen disable" 1> /dev/null 2> /dev/null

# Lock
/usr/bin/i3lock \
-n \
--centered \
--color="00000000" \
--image="${HOME}/.cache/smd/lockscreen.png" \
--pointer=default \
--force-clock \
--date-str="" \
--date-align=0 \
--date-color="FFFFFFFF" \
--date-pos="x+(w/2):y+(h/2)+170" \
--time-align=0 \
--time-str="%H:%M" \
--time-color="FFFFFFFF" \
--time-pos="x+(w/2):y+(h/2)+150" \
--lock-text="" \
--verif-text="" \
--wrong-text="" \
--no-modkey-text \
--noinput-text="" \
--greeter-text="" \
--lockfailed-text="" \
--indicator \
--ind-pos="x+(w/2):y+(h/2)" \
--radius=100 \
--ring-width=5 \
--ring-color="191919FF" \
--ringver-color="AC0FEBFF" \
--ringwrong-color="D23D3DFF" \
--line-uses-inside \
--inside-color="00000000" \
--insidever-color="00000000" \
--insidewrong-color="00000000" \
--bshl-color="D23D3DFF" \
--verif-color="FFFFFFFF" \
--separator-color="00000000" \
--keyhl-color="$(openssl rand -hex 3)FF" \
