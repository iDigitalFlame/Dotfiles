rm "${HOME}/.local/share/applications/discord.desktop" 2> /dev/null

# Enable Strict Mode
set -u

find "${HOME}" -xdev -type d -name ".git" -exec dash -c 'a=$(dirname "{}"); cd $a; git config core.filemode false' \; 2> /dev/null
chown ${USER}:${USER} -R "${HOME}" 2> /dev/null

find "${HOME}" -type d -exec chmod 2700 {} \; 2> /dev/null
find "${HOME}" -type f -exec chmod 2640 {} \; 2> /dev/null

find "${HOME}/.arduino15/packages" -type f ! -name "?*.*" -exec file {} \; | grep 'ELF 64-bit' | awk -F':' '{print $1}' | xargs chmod 2750
chmod 2750 "${HOME}"/.vscode-oss/extensions/*/bin/*
chmod 2750 "${HOME}"/.local/lib/python/bin/*
chmod 2750 "${HOME}"/.local/lib/go/bin/*
chmod 2755 "${HOME}/.local/lib/go/gopls"
chmod 2755 "${HOME}/.local/apps/zohoworkdrive/bin/zohoworkdrive"
chmod 2755 "${HOME}/.local/apps/zohoworkdrive/bin/zohoworkdrived"
chmod 2755 "${HOME}/.local/apps/zohoworkdrive/bin/QtWebEngineProcess"
find "${HOME}" -xdev -type d -name ".git" -exec chmod 2550 "{}/hooks/*" \; 2> /dev/null

dash "${HOME}/.local/bin/dotsync"
exit 0
