import os
import pathlib

# Changes:
# - Patch the "os.getcwd" and "Path().resolve" functions to prevent resolving symlinks.


def _getcwd():
    return os.getenv("PWD")


class _PosixPath(pathlib.PosixPath):
    def resolve(self, strict=False):
        if strict:
            return super().resolve(True)
        return self


os.getcwd = _getcwd
pathlib.PosixPath = _PosixPath


from black import patched_main

if __name__ == "__main__":
    patched_main()
