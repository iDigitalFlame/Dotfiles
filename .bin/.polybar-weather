## Polybar Weather Widget
# Gets the weather, duh.

get_icon() {
    case $1 in
        01d) _tmp_icon="";;
        01n) _tmp_icon="";;
        02d) _tmp_icon="";;
        02n) _tmp_icon="";;
        03*) _tmp_icon="";;
        04*) _tmp_icon="";;
        09d) _tmp_icon="";;
        09n) _tmp_icon="";;
        10d) _tmp_icon="";;
        10n) _tmp_icon="";;
        11d) _tmp_icon="";;
        11n) _tmp_icon="";;
        13d) _tmp_icon="";;
        13n) _tmp_icon="";;
        50d) _tmp_icon="";;
        50n) _tmp_icon="";;
        *) _tmp_icon="";
    esac
    printf "$_tmp_icon"
}

if [ $($HOME/.bin/online status) -eq 0 ]; then
  printf ""
  exit 0
fi

source "$HOME/.config/weather.conf"

if [ $# -eq 1 ] && [ "$1" == "go" ]; then
  xdg-open "https://openweathermap.org/city/$CITY"
  exit 0
fi

_tmp_indicator="°"
_tmp_output=$(sg iptables-web -c "curl -sf \"http://api.openweathermap.org/data/2.5/weather?APPID=$KEY&zip=$ZIP,us&units=imperial\"")

if [ ! -z "$_tmp_output" ]; then
  _tmp_icon=$(echo "$_tmp_output" | jq -r ".weather[].icon")
  _tmp_desc=$(echo "$_tmp_output" | jq -r ".weather[].description")
  _tmp_temp=$(echo "$_tmp_output" | jq ".main.temp" | cut -d "." -f 1)
  if [ $# -eq 1 ]; then
    echo "$(get_icon "$_tmp_icon")" "$_tmp_desc", "$_tmp_temp$_tmp_indicator"
  else
    echo "$(get_icon "$_tmp_icon")" "$_tmp_temp$_tmp_indicator"
  fi
fi

# EOF